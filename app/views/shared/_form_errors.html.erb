<% if f.object.errors.any? %>
  <div id="errors" class="sm:col-span-4">
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= content_tag(:span, :cancel, class: "material-symbols-outlined  text-red-400") %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">There was <%= pluralize(f.object.errors.count, "error") %> with your submission</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul role="list" class="list-disc space-y-1 pl-5">
              <% f.object.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
