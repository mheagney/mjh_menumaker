<%= render partial: "shared/page_header", locals: {title: "Restaurants", subtitle: "A list of Restaurants in your account", path: new_restaurant_path, button: "Create"} %>
<div class="mt-8 flex flex-col">
  <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
      <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Address</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">City</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">State</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Zipcode</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Edit</span>
              </th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Delete</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% current_user.restaurants.each do |restaurant| %>
              <tr id="<%= dom_id(restaurant) %>">
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= restaurant.name %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restaurant.address %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restaurant.city %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restaurant.state %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= restaurant.zipcode %></td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "Edit", edit_restaurant_path(restaurant), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "Delete", confirm_restaurant_path(restaurant), class: "text-indigo-600 hover:text-indigo-900", data: {turbo_frame: "modal"}, title: "Delete Menu"  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
