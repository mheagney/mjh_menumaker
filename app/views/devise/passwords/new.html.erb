<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company" />
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
    Forgot your password?
  </h2>
  <p class="mt-2 text-center text-sm text-gray-600">
    Or <%= link_to "log in now", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
</div>
<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-6", method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div>
        <%= f.label :email, class: "devise-label" %>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "devise-input" %>
        </div>
      </div>
      <div>
        <%= f.submit "Send me reset password instructions", class: "devise-button" %>
      </div>
    <% end %>
  </div>
</div>
