<%= form_for @menu, builder: TailwindBuilder do |f| %>
  <div class="border-gray-100 border-b-2">
    <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 mx-auto px-2 sm:divide-x divide-solid">
      <div class="p-4">
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Menu Information</h3>
          <p class="mt-1 text-sm text-gray-500">Name the menu and associate it with one of your establishments.</p>
        </div>
        <%= render partial: 'shared/form_errors', locals: {f:f} %>
        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :title, "Menu Title" %>
            <%= f.tw_text_field :title, placeholder: "Main Menu" %>
          </div>
          <div class="sm:col-span-4">
            <%= f.label :restaurant,  class: "block text-sm font-medium text-gray-700" %>
            <%= f.collection_select :restaurant_id, current_user.restaurants, :id, :name,{}, {class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"} %>
          </div>
          <div class="sm:col-span-6">
            <%= f.label :title, "Publish Menu" %>
            <p class="text-gray-500">All other menus for this restaurant will be unpublished.</p>
            <%= f.check_box :published  %>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-4 p-5 flex justify-end">
      <%= f.submit "Save", class: "ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  </div>
<% end %>
