<section aria-labelledby="profile-overview-title">
  <div class="overflow-hidden rounded-lg bg-white shadow">
    <div class="p-6">
      <h2 class="sr-only" id="menu-section"><%= @menu.title %></h2>
      <div class="max-w-xl">
        <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl"><%= @menu.title %></h2>
        <p class="mx-auto mt-5 max-w-xl text-xl text-gray-500"><%= @menu.description %></p>
      </div>
      <% @menu.sections.order(position: :asc).each do |section|%>
        <div class="mt-8">
          <h3 class="text-lg font-medium">
            <span class="absolute inset-0" aria-hidden="true"></span>
            <%= section.title %>
          </h3>
          <p class="mt-2 text-sm text-gray-500"><%= section.description %></p>
          <%= render(ItemComponent.with_collection(section.items.order(position: :asc), show_controls: false, show_handle: false, show_upload: false))%>
        </div>
      <% end %>
    </div>
  </div>
</section>
